/
/ onload script
/
script(type="text/javascript")
  | $(document).ready(ready_for_festival);
/
/ HTML contents from here
/
.fes
  .eye-catch
    .filler
    = image_tag "messe.jpg", alt: @festival.name
  .info-box
    h2.name
      = @festival.name
    .date
      - date_format = "%Y/%m/%d"
      = @start_date.date.strftime(date_format) + " ~ "
      = @end_date.date.strftime(date_format)
    .place
      - @places.each do |place|
        == place
        br
a.no-deco(href="#{fesdy_path}")
  button.btn.btn-lg.btn-block.start
    | 予習する
    | &nbsp;&nbsp;
    i.icon-play

/ TODO: 日別、会場別の予習するボタン。

.artists.row
  / アーティストは、開催場所・日付で分けて表示する
  / TODO: artistsを、事前にコントローラーで分けておく
  - last_date = DateTime.now(-100)
  - @dates.each do |date|
    / lg --1200px-- md --992p-- sm --768px-- xs
    .col-lg-3.col-md-4.col-sm-6.col-xs-12
      table.table.table-bordered
        thead
          tr
            th
              .date
                | #{date.date.strftime(date_format)}
              .place
                | #{date.place}
        - @artists.each_with_index do |artist, i|
          - if artist.festival_dates.include? date
            tr
              td.artist
                a.no-deco href="#{artist_path(id: artist.path_key)}"
                  = artist.name
                  - last_date = date.date

.row
  .col-md-6
    a.no-deco href="#{@festival.official_site}"
      button.btn.btn-default.to-official-site(type="button")
        = "#{@festival.name} 公式サイトへ"
  .col-md-6
    button.btn.btn-default.to-top(type="button")
      i.icon-arrow-up
